<odoo>
    <record id="new_view_product_use_variant_form_wizard" model="ir.ui.view">
        <field name="name">new.view.product.use.variant.form.wizard</field>
        <field name="model">new.product.use.variant</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="state" string="Estado" readonly="1"/>
                    <field name="pages" string="Páginas"/>
                    <field name="approval_date" string="Fecha de Aprobación" required="1"/>
                    <field name="standards_ref" string="Referencia en Normas"/>
                </group>
                <footer>
                    <button name="new_action_create_new_variant" type="object" string="Crear" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>

