<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="updt_default_code" model="ir.actions.server">
            <field name="name">DFX Update Referencias Internas</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_product" />
<!--            <field name="binding_model_id" ref="model_survey_survey" />-->
            <field name="state">code</field>
            <field name="code">
if records:
    record.update_default_code()
            </field>
        </record>
    
        <record id="updt_reasig" model="ir.actions.server">
            <field name="name">DFX Productos</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_template" />
<!--            <field name="binding_model_id" ref="model_product_template" />-->
            <field name="state">code</field>
            <field name="code">
                if records:
                record.check_history_norm(20)
            </field>
        </record>
    
    
        <record id="updt_reasig_clean" model="ir.actions.server">
            <field name="name">DFX Clean Productos</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_template" />
<!--            <field name="binding_model_id" ref="model_product_template" />-->
            <field name="state">code</field>
            <field name="code">
                if records:
                record.clean_history_norm()
            </field>
        </record>
        
        <record id="updt_reasig_clean_ordered" model="ir.actions.server">
            <field name="name">DFX Clean Productos Ordenados</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_template" />
<!--            <field name="binding_model_id" ref="model_product_template" />-->
            <field name="state">code</field>
            <field name="code">
                if records:
                record.clean_history_norm_order_processed()
            </field>
        </record>
        
        <record id="updt_reasig_cascada" model="ir.actions.server">
            <field name="name">DFX Reasignar en Cascada Productos</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_template" />
<!--            <field name="binding_model_id" ref="model_product_template" />-->
            <field name="state">code</field>
            <field name="code">
                if records:
                record.reasign_cascade()
            </field>
        </record>
</data>
</odoo>