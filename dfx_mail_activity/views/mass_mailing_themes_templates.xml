<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="assets_mail_themes" inherit_id="mass_mailing.assets_mail_themes">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/less" href="/inteco/static/src/less/themes/theme_aniversary30.less"/>
      <link rel="stylesheet" type="text/less" href="/inteco/static/src/less/themes/theme_event.less"/>
      <link rel="stylesheet" type="text/less" href="/inteco/static/src/less/themes/theme_formacion.less"/>
      <link rel="stylesheet" type="text/less" href="/inteco/static/src/less/themes/theme_formacion_multiple.less"/>
      <link rel="stylesheet" type="text/less" href="/inteco/static/src/less/themes/theme_evaluadores.less"/>
    </xpath>
  </template>

  <template id="Updated_s_mail_block_footer_social" name="Updated Footer Center" inherit_id="mass_mailing.s_mail_block_footer_social">
    <xpath expr="//div[1]" position="replace">
      <div class="o_mail_block_footer_social o_mail_footer_social_center">
        <div class="o_mail_snippet_general">
          <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles o_mail_full_width_padding">
            <tbody>
              <tr>
                <td class="o_mail_footer_links">
                  <a role="button" href="/unsubscribe_from_list" class="btn btn-link">Unsubscribe</a>
                </td>
              </tr>
              <tr>
                <td>
                  <p class="o_mail_footer_copy"><span class="fa fa-copyright" role="img" aria-label="Copyright" title="Copyright"/> 2020 All Rights Reserved</p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </xpath>
  </template>

  <template id="Updated_s_mail_block_footer_social_left" name="Updated Footer Left" inherit_id="mass_mailing.s_mail_block_footer_social_left">
    <xpath expr="//div[1]" position="replace">
      <div class="o_mail_block_footer_social o_mail_footer_social_left">
        <div class="o_mail_snippet_general">
          <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles o_mail_full_width_padding">
            <tbody>
              <tr>
                <td class="o_mail_footer_description">
                  <p t-if="res_company" class="o_mail_no_margin">
                    <strong><t t-esc="res_company.partner_id.name"/></strong>
                  </p>
                  <div class="o_mail_footer_links">
                    <a role="button" href="/unsubscribe_from_list" class="btn btn-link">Unsubscribe</a>
                  </div>
                  <div>
                    <p class="o_mail_footer_copy"><span class="fa fa-copyright" role="img" aria-label="Copyright" title="Copyright"/> 2020 All Rights Reserved</p>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </xpath>
  </template>

  <!-- Add themes in editor -->
  <template id="email_designer_snippets" inherit_id="mass_mailing.email_designer_snippets">
    <xpath expr="//div[@id='email_designer_themes']" position="inside">
      <div data-name="+info"
           data-img="/inteco/static/src/img/theme_imgs/aniversary30_thumb"
           data-images-info='{"logo": {"format": "png"}, "all": {"module": "inteco"}}'>
        <t t-call="dfx_mail_activity.theme_+info_template"/>
      </div>
      <div data-name="normative_theme"
           data-img="/inteco/static/src/img/theme_imgs/aniversary30_thumb"
           data-images-info='{"logo": {"format": "png"}, "all": {"module": "inteco"}}'>
        <t t-call="dfx_mail_activity.info_theme_normative"/>
      </div>
    </xpath>
  </template>

