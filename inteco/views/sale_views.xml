    <record model="ir.ui.view" id="estimated_income_graph">
        <field name="name">estimated.income.graph</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <graph string="Estimated Income">
                <field name="payment_date" type="row"/>
                <field name="price_subtotal" type="measure"/>
            </graph>
        </field>
    </record>

