<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Form View -->
    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="110"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page/field/form/group/group[2]/label[@for='customer_lead']" position="replace">
                <label for="payment_date"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/form/group/group[2]/div" position="replace">
                <div>
                    <field name="payment_date" class="oe_inline"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='note']" position="after">
                <field name="conditions"/>
            </xpath>
        </field>
    </record>

