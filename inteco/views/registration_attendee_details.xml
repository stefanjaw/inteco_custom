<?xml version="1.0"?>
<odoo>
    <template id="custom_attendee_details" inherit_id="website_event.registration_attendee_details" name="Inteco Registration Attendee Details" priority="2">
        <xpath expr="//div[hasclass('container')]/t[3]/div/div/span" position="replace"/>
