<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_confirm_form_wizard" model="ir.ui.view">
        <field name="name">view.product.confirm.form.wizard</field>
        <field name="model">product.confirm</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="confirmation_date"/>
                </group>
                <footer>
                    <button name="action_confirm_product" type="object" string="Confirm" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_product_confirm_wizard" model="ir.actions.act_window">
        <field name="name">Product Confirmation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.confirm</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_confirm_form_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
