<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_use_variant_form_wizard" model="ir.ui.view">
        <field name="name">view.product.use.variant.form.wizard</field>
        <field name="model">product.use.variant</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="state" readonly="1"/>
                    <field name="pages"/>
                    <field name="approval_date" required="1"/>
                    <field name="standards_ref"/>
                </group>
                <footer>
                    <button name="action_create_new_variant" type="object" string="Create" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_product_use_variant_wizard" model="ir.actions.act_window">
        <field name="name">Product Information</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.use.variant</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_use_variant_form_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
