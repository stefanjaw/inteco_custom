<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_form_watermark" model="ir.ui.view">
            <field name="name">sale.order.form.watermark</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="authorize_document"/>
                    <field name="watermark_email"/>
                </xpath>

                <xpath expr="//notebook/page/field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="isdownload" invisible="1"/>
                </xpath>

            </field>
        </record>

        <template id="max_download_reach" name="Cantidad de Descargas Maxima Alcanzada">
            <div>
                <span>Solo puede descargar este documento 1 sola vez</span>
            </div>
                    <script>
                        setTimeout(function(){
                        window.location.href = '/my/orders';
                        }, 1900)
                    </script>
        </template>

    </data>
</odoo>